{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "outDir": "lib",
    "types" : ["jest", "mocha"],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
